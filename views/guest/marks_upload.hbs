                    <div class="module scrollme">
                        <div class="module-head">
                            <h3>Upload danh sách sinh viên</h3>
                        </div>
                        <div class="module-body">
                            <form action="/marks/upload/THCS21" method="post" enctype="multipart/form-data">
                                Chọn file danh sách sinh viên (*)
                                <input type="file" name="file_SV"> <br>
                                <input type="submit" value="upload" class="btn btn-info">
                            </form>
                            <h5>{{msg}}</h5>

                        </div>
                        <div class="module-head">
                            <h3>Danh sách sinh viên</h3>
                        </div>

                        <div class="module-body table">
                            <table cellpadding="0" cellspacing="0" border="0"
                                class="datatable-1 table table-bordered table-striped	 display" width="100%" id="myTable">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>MSSV</th>
                                        <th>Họ lót</th>
                                        <th>Tên</th>
                            
                                        <th>Điểm TK</th>
                                        <th>Ghi chú</th>

                                    </tr>
                                </thead>
                                <tbody>
                                     {{#with list as |list|}}
                                     {{#each list.DSSinhVien}}
                                         
                                    <tr class="odd gradeX">
                                        <td>{{@index}}</td>
                                        <td>{{SinhVien.MSSV}}</td>
                                        <td>{{SinhVien.HoLot}}</td>
                                        <td>{{SinhVien.Ten}}</td>
                                        <td {{#ifCond Difference false}}
                                            class="bold-red"
                                        {{/ifCond}}>{{DiemTK}}</td>
                                        <td>{{GhiChu}}</td>
                                        

                                    </tr>
                                     {{/each}}

                                     {{/with}}

                                </tbody>
                               
                            </table>
                        </div>
                        <div class="module-foot">
                            <div class="control-group">
                                <div class="controls">
                                    <button type="submit" class="btn btn-info">Cập nhật điểm</button>
                                </div>
                            </div>
                        </div>
                        </div>




