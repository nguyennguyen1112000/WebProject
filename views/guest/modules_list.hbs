{{#section 'footer'}}
<script>


    $(document).ready(function () {
        $('#myTable').DataTable({
            
        });
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

    });


</script>


{{/section}}

            <div class="span9">
                <div class="content">
                    <div class="btn-controls">
                        <div class="btn-box-row row-fluid">
                            <a href="/modules/list" class="btn-box span4 bg-light">
                                <i class="icon-list"></i>
                                <b>Danh sách môn học</b>
                            </a>
                            <a href="/modules/add" class="btn-box span4">
                                <i class="icon-plus"></i>
                                <b>Thêm môn học</b>
                            </a>
                            <a href="/modules/edit" class="btn-box span4">
                                <i class="icon-edit"></i>
                                <b>Chỉnh sửa môn học</b>
                            </a>
                        </div>
                    </div>
                    <div class="module">
                        <div class="module-head">
                            <h3>
                                Danh sách môn học</h3>
                        </div>

                        <div class="module-body table scrollme">
                            {{#if empty}}
                            <h4><b>Không tìm thấy sinh viên nào</b></h4>
                            {{/if}}

                            <table cellpadding="0" cellspacing="0" border="0"
                                class="datatable-1 table table-bordered table-striped display" id="myTable"
                                class="display">
                                <thead>
                                    <tr>
                                        <th rowspan="2">Mã môn học</th>
                                        <th rowspan="2">Tên môn học</th>
                                        <th rowspan="2">Số tín chỉ</th>
                                        <th colspan="3">Số giờ tín chỉ</th>
                                        <th rowspan="2">Môn tiên quyết</th>
                                        <th rowspan="2">Tên tiếng Anh</th>
                                    </tr>
                                    <tr>

                                        <th>Lý thuyết</th>
                                        <th>Thực hành</th>
                                        <th>Tự học</th>

                                    </tr>


                                </thead>
                                <tbody>
                                    
                                    {{#each list}}
                                    <tr class="odd gradeX" id="row{{@index}}">

                                        <td>{{MaMonHoc}}</td>
                                        <td>{{MonHoc}}</td>
                                        <td>{{SoTC}}</td>
                                        <td>{{SoGioTC.LyThuyet}}</td>
                                        <td>{{SoGioTC.ThucHanh}}</td>
                                        <td>{{SoGioTC.TuHoc}}</td>
                                        <td>{{MonTienQuyet}}</td>
                                        <td>{{TenTiengAnh}}</td>
                                    </tr>

                                    {{/each}}


                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!--/.content-->
            </div>
            <!--/.span9-->
