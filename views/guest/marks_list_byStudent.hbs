{{#section 'footer'}}
<script>


    $(document).ready(function () {
        $('#myTable').DataTable({

        });
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

    });


</script>


{{/section}}

<div class="span9">
    <div class="content">
        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/marks/list_bySubject" class="btn-box span3">
                    <i class="icon-list"></i>
                    <b>Điểm theo học phần</b>
                </a>
                <a href="/marks/list_byStudent" class="btn-box span3 bg-light">
                    <i class="icon-user"></i>
                    <b>Điểm theo sinh viên</b>
                </a>
                <a href="/marks/upload" class="btn-box span3">
                    <i class="icon-arrow-up"></i>
                    <b>Upload bảng điểm</b>
                </a>
                <a href="/subjects/edit" class="btn-box span3">
                    <i class="icon-print"></i>
                    <b>In bảng điểm</b>
                </a>

            </div>
        </div>
        <div class="module">
            <div class="module-head">
                <h3>
                    Danh sách học phần</h3>
            </div>

            <div class="module-body table scrollme">
                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>MSSV</th>
                            <th>Họ và tên</th>
                            <th>Lớp</th>
                            <th>Giới tính</th>
                            <th>Ngày sinh</th>
                            <th>Ngành</th>
                            <th><i class="icon-edit"></i></th>
                        </tr>



                    </thead>
                    <tbody>

                        {{#each list}}
                        <tr class="odd gradeX" id="row{{@index}}">

                            <td>{{MSSV}}</td>
                            <td>{{HoLot}} {{Ten}}</td>
                            <td>{{Lop}}</td>
                            <td>{{GioiTinh}}</td>
                            <td>{{NgaySinh}}</td>
                            <td>{{Nganh}}</td>
                            <td><a href="/marks/students/{{MSSV}}">Nhập điểm</a></td>
                        </tr>

                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>
