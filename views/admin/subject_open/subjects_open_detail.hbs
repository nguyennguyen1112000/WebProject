<div class="span9">
    <div class="content">
        <div class="module message">
            {{#with detail}}
            <div class="module-head">
                <h3><a href="/subjects/open/list">DS các đợt ĐKHP</a> > {{MaDKHP}}</h3>
                
            </div>
            <div class="module-body">
                <div class="control-group">
                    <h5 class="bold-red">Thông tin chung</h5>

                    <ol>
                        <li> <strong>Học kì:</strong> {{HocKi}}</li>
                        <li><strong>Ngày bắt đầu học kì:</strong> {{DateFormat NgayBatDauHK}}</li>
                        <li><strong>Ngày kết thúc HK (dự kiến):</strong> {{DateFormat NgayKetThucHK}}</li>
                        <li><strong>Thời gian bắt đầu đăng kí:</strong> {{TimeFormat ThoiGianBD}}</li>
                        <li> <strong>Thời gian kết thúc đăng kí:</strong> {{TimeFormat ThoiGianKT}} </li>
                    </ol>
                </div>
            </div>
            <div class="module-body table">
                <div class="control-group">
                    <h5 class="bold-red">Danh sách học phần mở</h5>
                </div>
                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã HP</th>
                            <th>Tên HP</th>
                            <th>Giảng viên</th>
                            <th>NH/KH</th>
                            <th>Số nhóm TH</th>
                            <th>Số SV</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ../list}}
                        <tr class="odd gradeX" id="row{{@index}}">
                            <td>{{Add @index 1}}</td>
                            <th>{{MaHP}}</th>
                            <td>{{TenHP}}</td>
                            <td>
                                {{#each GVLyThuyet}}
                                {{TenGV}},
                                {{/each}}
                                {{#each GVThucHanh}}
                                {{TenGV}},
                                {{/each}}
                            </td>
                            <td>{{NamHoc NgayBatDau NgayKetThuc HocKi}}/{{HocKi}}</td>
                            <td>{{SoNhomTH}}</td>
                            <td>{{countArray DSSinhVien}}/{{SoSVToiDa}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{/with}}