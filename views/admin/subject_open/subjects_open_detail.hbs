{{#section 'footer'}}

<script>

    $(document).ready(function () {
        $('#myTable').DataTable({

        });
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });


    });


</script>

{{/section}}

<div class="span9">
    <div class="content">
       
        <div class="module-message">
            {{#with detail}}

            <div class="module-head">
                <a href="/subjects/open/list">DS các đợt ĐKHP</a> > {{MaDKHP}}
            </div>

            <div class="module-body">



                <div class="control-group">
                    <h5 class="bold-red">Thông tin chung</h5>

                    <ol>
                        <li> <strong>Học kì:</strong> {{HocKi}}</li>
                        <li><strong>Ngày bắt đầu học kì:</strong> {{DateFormat NgayBatDauHK}}</li>
                        <li><strong>Ngày kết thúc HK (dự kiến):</strong> {{DateFormat NgayKetThucHK}}</li>
                        <li><strong>Thời gian bắt đầu đăng kí:</strong> {{TimeFormat TGBatDau}}</li>
                        <li> <strong>Thời gian kết thúc đăng kí:</strong> {{TimeFormat TGKetThuc}} </li>
                    </ol>
                </div>

            </div>
            <div class="module-body table">
                <div class="control-group">
                    <h5 class="bold-red">Danh sách học phần mở</h5>
                </div>
                <table cellpadding="0" cellspacing="0" border="0"
                        class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã DKHP</th>
                                <th>Tên HP</th>
                                <th>Giảng viên</th>
                                <th>NH/KH</th>
                                <th>Số nhóm TH</th>
                                <th>Số SV tối đa</th>
                                <th>Số SV đã ĐK</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#each DSHocPhan}}
                            <tr class="odd gradeX" id="row{{@index}}">
                                <td>{{Add @index 1}}</td>
                                <td>{{HocPhan.MaDKHP}}</td>
                                <td>{{HocPhan.TenHP}}</td>
                                <td>
                                    {{#each HocPhan.GVLyThuyet}}
                                    {{TenGV}} (GV LyThuyet),
                                    {{/each}}
                                    {{#each HocPhan.GVThucHanh}}
                                    {{TenGV}} (GV ThucHanh),
                                    {{/each}}
                                </td>
                                <td>{{NamHoc HocPhan.NgayBatDau HocPhan.NgayKetThuc HocPhan.HocKi}}/{{HocPhan.HocKi}}</td>
                                <td>{{HocPhan.SoNhomTH}}</td>
    
                                <td>{{SVToiDa}}</td>
                                <td>{{countArray HocPhan.DSSinhVien}}</td>

                            </tr>

                            {{/each}}


                        </tbody>
                    </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>
<!--/.span9-->
{{/with}}