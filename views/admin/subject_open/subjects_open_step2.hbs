{{#section 'footer'}}


<script>
    //Ajax form
    $(document).ready(function () {
         $('#myTable').DataTable({

        });
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

    })
 
</script>


{{/section}}

<div class="span9">
    <div class="content">
        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/subjects/open/list" class="btn-box span3 ">
                    <i class="icon-list"></i>
                    <b>Các học phần đã mở</b>
                </a>
                <a href="/subjects/open" class="btn-box span3 bg-light">
                    <i class="icon-plus"></i>
                    <b>Mở ĐKHP</b>
                </a>
                <a href="/subjects/open/edit" class="btn-box span3">
                    <i class="icon-edit"></i>
                    <b>Chỉnh sửa ĐKHP</b>
                </a>
            </div>
        </div>
        <div class="module">
            <div class="module-head">
                <h3>Bước 2: Danh sách học phần mở</h3>
                <div class="controls">
                    <a type="buton" class="btn btn-info" href="/subjects/open"><i class="icon-chevron-left"></i>Quay lại
                    </a>
                    <a type="buton" class="btn btn-success" href="/subjects/add">Thêm học phần<i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="module-body">
                <form class="form-horizontal row-fluid" action="/subjects/open/finish" method="post">
                    {{#if empty}}
                    <h5 class="bold-red">Chưa có học phần nào trong danh sách</h5>
                    {{else}}
                    <h5 class="bold-red">Danh sách học phần</h5>
                    <table cellpadding="0" cellspacing="0" border="0"
                        class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Mã DKHP</th>
                                <th>Tên HP</th>
                                <th>Giảng viên</th>
                                <th>NH/KH</th>
                                <th>Số nhóm TH</th>
                                <th>Số SV tối đa</th>
                            </tr>
                        </thead>
                        <tbody>

                            {{#each list}}
                            <tr class="odd gradeX" id="row{{@index}}">
                                <td>{{Add @index 1}}</td>
                                <td>{{MaDKHP}}</td>
                                <td>{{TenHP}}</td>
                                <td>
                                    {{#each GVLyThuyet}}
                                    {{TenGV}} (GV LyThuyet),
                                    {{/each}}
                                    {{#each GVThucHanh}}
                                    {{TenGV}} (GV ThucHanh),
                                    {{/each}}
                                </td>
                                <td>{{NamHoc NgayBatDau NgayKetThuc HocKi}}/{{HocKi}}</td>
                                <td>{{SoNhomTH}}</td>
    
                                <td><input type="number" placeholder="Số SV tối đa"  required min="0"
                                        max='200' name="SVToiDa"></td>

                            </tr>

                            {{/each}}


                        </tbody>
                    </table>


                    {{/if}}
                        <div class="module-foot">
                        <button type="submit" class="btn btn-danger btn-block">Hoàn thành<i class="icon-check"></i>
                        </button>
                        </div>
                    
                </form>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>
<!--/.span9-->