<div class="span9">
    <div class="content">
        <div class="module message">
            {{#with detail}}
            <div class="module-head">
                <h3><a href="/subjects/open/list">Chỉnh sửa đăng ký học phần</a> > {{MaDKHP}}</h3>

            </div>
            <div class="module-body">
                <div class="control-group">
                    <h5 class="bold-red">Thông tin chung</h5>
                </div>
                <form class="form-horizontal row-fluid" action="/subjects/open/step2" method="post">
                    <div class="control-group">
                        <label class="control-label">Mã ĐKHP</label>
                        <div class="controls">
                            <input type="text" name="MaDKHP" id="MaDKHP" value="{{MaDKHP}}" class="span8" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Học kì</label>
                        <div class="controls">
                            <input type="number" name="HocKi" value="{{HocKi}}" class="span8" min="1" max="3" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Ngày bắt đầu học kì</label>
                        <div class="controls">
                            <input type="text" value="{{LocaleStringDate NgayBatDauHK}}" class="span8 date" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Ngày kết thúc HK (dự kiến)</label>
                        <div class="controls">
                            <input type="text" value="{{LocaleStringDate NgayKetThucHK}}" class="span8 date" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Thời gian bắt đầu đăng kí</label>
                        <div class="controls">
                            <input type="text" value="{{LocaleStringDate ThoiGianBD}}" class="span8 date" required>
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Thời gian kết thúc đăng kí</label>
                        <div class="controls">
                            <input type="text" value="{{LocaleStringDate ThoiGianKT}}" class="span8 date" required>
                        </div>
                    </div>
                </form>
                <br>
            </div>
            <div class="module-body table">
                <div class="control-group">
                    <h5 class="bold-red">Danh sách học phần mở</h5>
                </div>
                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã HP</th>
                            <th>Tên HP</th>
                            <th>Giảng viên</th>
                            <th>NH/KH</th>
                            <th>Số nhóm TH</th>
                            <th>Số SV</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each ../list}}
                        <tr class="odd gradeX" id="row{{@index}}">
                            <td>{{Add @index 1}}</td>
                            <th>{{MaHP}}</th>
                            <td>{{TenHP}}</td>
                            <td>
                                {{#each GVLyThuyet}}
                                {{TenGV}},
                                {{/each}}
                                {{#each GVThucHanh}}
                                {{TenGV}},
                                {{/each}}
                            </td>
                            <td>{{NamHoc NgayBatDau NgayKetThuc HocKi}}/{{HocKi}}</td>
                            <td>{{SoNhomTH}}</td>
                            <td>{{countArray DSSinhVien}}/{{SoSVToiDa}}</td>
                            <td><button class="btn btn-default"><i class="icon-trash"></i></button></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{{/with}}