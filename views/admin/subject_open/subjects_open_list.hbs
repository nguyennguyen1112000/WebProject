<div class="span9">
    <div class="content">
        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/subjects/open/list" class="btn-box span3 bg-light ">
                    <i class="icon-list"></i>
                    <b>Các học phần đã mở</b>
                </a>
                <a href="/subjects/open" class="btn-box span3">
                    <i class="icon-plus"></i>
                    <b>Mở ĐKHP</b>
                </a>
                <a href="/subjects/open/edit" class="btn-box span3">
                    <i class="icon-edit"></i>
                    <b>Chỉnh sửa ĐKHP</b>
                </a>
            </div>
        </div>
        <div class="module">
            <div class="module-head">
                <h3>
                    Danh sách các đợt ĐKHP</h3>
            </div>
            <div class="module-body table scrollme">
                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã ĐKHP</th>
                            <th>NH/HK</th>
                            <th>Số học phần mở</th>
                            <th>Chỉnh sửa</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr class="odd gradeX" id="row{{@index}}">
                            <td>{{Add @index 1}}</td>
                            <td><a href="/subjects/open/detail/{{MaDKHP}}">{{MaDKHP}} </a> </td>
                            <td>{{NamHoc NgayBatDauHK NgayKetThucHK HocKi}}/{{HocKi}}</td>
                            <td>{{countArray DSHocPhan}}</td>
                            <td><a href="/subject/open/edit/{{MaDKHP}}" class="btn btn-default"><i class="icon-edit"></i></a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>