
<div class="span9">
    <div class="content">
        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/marks/list_bySubject" class="btn-box span3 bg-light">
                    <i class="icon-list"></i>
                    <b>Điểm theo học phần</b>
                </a>
                <a href="/marks/list_byStudent" class="btn-box span3">
                    <i class="icon-user"></i>
                    <b>Điểm theo sinh viên</b>
                </a>
                <a href="/marks/upload" class="btn-box span3">
                    <i class="icon-arrow-up"></i>
                    <b>Upload bảng điểm</b>
                </a>
                <a href="/subjects/edit" class="btn-box span3">
                    <i class="icon-print"></i>
                    <b>In bảng điểm</b>
                </a>

            </div>
        </div>
        <div class="module">
            <div class="module-head">
                <h3>
                    Danh sách học phần</h3>
            </div>

            <div class="module-body table scrollme">
                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Mã môn học</th>
                            <th>Tên học phần</th>
                            <th>Giảng viên</th>
                            <th>NH/HK</th>
                            <th>Số sinh viên</th>
                            <th>Tình trạng</th>
                            <th>Nhập điểm</th>
                        </tr>



                    </thead>
                    <tbody>

                        {{#each list}}
                        <tr class="odd gradeX" id="row{{@index}}">
                            <td>{{Add @index 1}}</td>
                            <td>{{MonHoc.MaMonHoc}}</td>
                            <td>{{TenHP}}</td>
                            <td>
                                {{#each GVLyThuyet}}
                                {{TenGV}} (GV LyThuyet),
                                {{/each}}
                                {{#each GVThucHanh}}
                                {{TenGV}} (GV ThucHanh),
                                {{/each}}
                            </td>
                            <td>{{NamHoc NgayBatDau NgayKetThuc HocKi}}/{{HocKi}}</td>
                            <td>{{countArray DSSinhVien}}</td>
                            <td>{{TinhTrang NgayKetThuc}}</td>
                            <td>{{#ifCond NhapDiem true}}
                                Đã hoàn thành
                                {{else}}
                                Chưa hoàn thành
                                {{/ifCond}} <br><span><a href="/marks/subjects/{{MaHP}}">Nhập điểm</a></span></td>
                        </tr>

                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>