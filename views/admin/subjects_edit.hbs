{{#section 'footer'}}
<script>


    $(document).ready(function () {
        $('#myTable').DataTable({

        });
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });

        $("form").submit(function (e) {
            e.preventDefault()
            var url = $(this).attr("action");
            console.log(url)
            var request_method = $(this).attr("method")
            frmData = $(this).serialize()
            console.log(frmData)
            $.ajax({
                type: request_method,
                url: url,
                data: frmData,
                success: function (data) {
                    if (data.success) {
                        Swal.fire(
                            'Xóa học phần',
                            data.success,
                            'success'
                        )
                            .then(function () {
                                location.reload(true)

                            })
                    }

                }
            });

        })

    });



</script>


{{/section}}

<div class="span9">
    <div class="content">
        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/subjects/list" class="btn-box span3 ">
                    <i class="icon-list"></i>
                    <b>Danh sách học phần</b>
                </a>
                <a href="/subjects/add" class="btn-box span3">
                    <i class="icon-plus"></i>
                    <b>Thêm học phần</b>
                </a>
                <a href="/subjects/edit" class="btn-box span3 bg-light">
                    <i class="icon-edit"></i>
                    <b>Chỉnh sửa học phần</b>
                </a>

            </div>
        </div>
        <div class="module">
            <div class="module-head">
                <h3>
                    Danh sách môn học</h3>
            </div>

            <div class="module-body table scrollme">

                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>Mã ĐKHP</th>
                            <th>Mã môn học</th>
                            <th>Tên học phần</th>
                            <th>Giảng viên</th>
                            <th>Học kì</th>
                            <th>Năm học</th>
                            <th>Số sinh viên</th>
                            <th>Số nhóm TH</th>
                            <th>Tình trạng</th>
                            <th>Chỉnh sửa</th>
                            <th>Xóa</th>
                        </tr>



                    </thead>
                    <tbody>

                        {{#each list}}
                        <tr class="odd gradeX" id="row{{@index}}">
                            <td>{{MaDKHP}}</td>
                            <td>{{MonHoc.MaMonHoc}}</td>
                            <td>{{TenHP}}</td>
                            <td>
                                {{#each GVLyThuyet}}
                                {{TenGV}} (GV LyThuyet),
                                {{/each}}
                                {{#each GVThucHanh}}
                                {{TenGV}} (GV ThucHanh),
                                {{/each}}
                            </td>
                            <td>{{HocKi}}</td>
                            <td>{{NamHoc NgayBatDau NgayKetThuc HocKi}}</td>
                            <td>{{countArray DSSinhVien}} <br><span><a href="/subjects/students_list/edit/{{MaHP}}">Sửa
                                        danh sách</a></span></td>
                            <td>{{SoNhomTH}}</td>
                            <td> {{#ifCond TinhTrang false}}
                                Đã hoàn thành

                                {{else}}
                                Chưa hoàn thành
                                {{/ifCond}}
                            </td>
                            <td><a href="/subjects/edit/{{MaHP}}" class="btn btn-info"><i class="icon-edit"></i></a>
                            </td>
                            <form action="/subjects/delete/{{MaHP}}" method="post">
                                <td>
                                    <button class="btn btn-danger"><i class="icon-trash"></i></button>
                                </td>
                            </form>
                        </tr>
                        {{/each}}




                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>
<!--/.span9-->