
{{#with detail}}

<div class="span9">
    <div class="content">

        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/subjects/list" class="btn-box span3 bg-light ">
                    <i class="icon-list"></i>
                    <b>Danh sách học phần</b>
                </a>
                <a href="/subjects/add" class="btn-box span3">
                    <i class="icon-plus"></i>
                    <b>Thêm học phần</b>
                </a>
                <a href="/subjects/edit" class="btn-box span3">
                    <i class="icon-edit"></i>
                    <b>Chỉnh sửa học phần</b>
                </a>
            </div>
        </div>

        <div class="module">
            <div class="module-head">
                <a href="/subjects/list">Quản lý học phần</a> > Danh sách sinh viên học phần
                    phần {{MaHP}}
            </div>
            <div class="module-body table scrollme">

                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" id="myTable" class="display">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>MSSV</th>
                            <th>Họ và tên</th>

                        </tr>



                    </thead>
                    <tbody>

                        {{#each DSSinhVien}}
                        <tr class="odd gradeX" id="row{{@index}}">

                            <td>{{@index}}</td>
                            <td>{{SinhVien.MSSV}}</td>
                            <td>{{SinhVien.HoLot}} {{SinhVien.Ten}}</td>

                        </tr>

                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>
<!--/.span9-->
{{/with}}