<div class="span9">
    <div class="content">
        <div class="btn-controls">
            <div class="btn-box-row row-fluid">
                <a href="/students/add" class="btn-box span3">
                    <i class="icon-arrow-up"></i>
                    <b>Upload danh sách</b>
                </a>
                <a href="/students/add-new" class="btn-box span3">
                    <i class="icon-user"></i>
                    <b>Thêm sinh viên</b>
                </a>
                <a href="" class="btn-box span3 bg-light">
                    <i class="icon-search"></i>
                    <b>Tìm kiếm sinh viên</b>
                </a>
                <a href="/students/edit-info" class="btn-box span3">
                    <i class="icon-edit"></i>
                    <b>Chỉnh sửa sinh viên</b>
                </a>
            </div>
        </div>
        <div class="module">
            <div class="module-head">
                <h3>
                    Tìm kiếm sinh viên</h3>
            </div>
            <div class="module-option clearfix">
                <form action="" method="get" id="frmSearch">
                    <div class="input-append pull-left">
                        <input type="text" class="span3" placeholder="Tìm kiếm theo MSSV/tên" name="text_search">
                        <button type="submit" class="btn" id="search">
                            <i class="icon-search"></i>
                        </button>
                    </div>
                </form>

            </div>
            <div class="module-body table scrollme">
                {{#if empty}}
                <h4><b>Không tìm thấy sinh viên nào</b></h4>
                {{/if}}
                <table cellpadding="0" cellspacing="0" border="0"
                    class="datatable-1 table table-bordered table-striped display" width="100%">
                    <thead>
                        <tr>
                            <th>MSSV</th>
                            <th>HoLot</th>
                            <th>Ten</th>
                            <th>GioiTinh</th>
                            <th>NgaySinh</th>
                            <th>NoiSinh</th>
                            <th>Lop</th>
                            <th>Nganh</th>
                            <th>Email</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each list}}
                        <tr class="odd gradeX" id="row{{@index}}">
                            <td>{{MSSV}}</td>
                            <td>{{HoLot}}</td>
                            <td>{{Ten}}</td>
                            <td> {{#ifCond GioiTinh true}}
                                Nam
                                {{else}}
                                Nữ
                                {{/ifCond}}</td>
                            <td>{{DateFormat NgaySinh}}</td>
                            <td>{{NoiSinh}}</td>
                            <td>{{Lop}}</td>
                            <td>{{Nganh.TenNganh}}</td>
                            <td style="max-width 10px;">{{Email}}</td>
                        </tr>
                        {{/each}}


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.content-->
</div>
<!--/.span9-->